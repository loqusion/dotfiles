. "$HOME/.cargo/env"

#---- Environment variables ------------#
export EDITOR=nvim
export FCEDIT=nvim
export PAGER=less
export LESS='-RQM'
export GZIP='-v9N'
export SHELL=zsh
export MANPAGER='nvim --clean +Man\!'
export GOPATH="$HOME/.go"
